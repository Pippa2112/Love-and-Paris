{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .faq-tabs__header { margin-bottom: 3rem; }
  .faq-tabs__tab-list { display: flex; margin-bottom: -1px; }

  .faq-tabs__tab-button {
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    font-style: var(--font-heading-style);
    padding: 1.2rem 1.5rem;
    cursor: pointer;
    background: none;
    border: 1px solid rgba(var(--color-foreground), 0.1);
    color: {{ section.settings.inactive_tab_text_color }};
    transition: color 0.2s ease, background-color 0.2s ease;
    text-transform: uppercase;
    flex-grow: 1;
    text-align: center;
    border-radius: 0;
    margin-right: -1px;
  }

  .faq-tabs__tab-button[aria-selected="true"] {
    background-color: {{ section.settings.active_tab_background_color }};
    color: {{ section.settings.active_tab_text_color }};
    border-color: {{ section.settings.active_tab_background_color }};
  }

  .faq-tabs__tab-panel { display: none; }
  .faq-tabs__tab-panel.is-active { display: block; }
  
  .faq-tabs__accordion-group {
    background-color: rgba(var(--color-foreground), 0.04);
    padding: 2rem 3rem;
    border-radius: 0;
    border: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .accordion__item + .accordion__item {
    margin-top: 1.5rem;
  }

  .accordion__title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    gap: 1.5rem;
  }

  .accordion__title > span {
    flex-grow: 1; /* This is the fix */
  }

  .accordion__title .icon-caret {
    flex-shrink: 0;
    margin-right: -75px;
  }

  @media screen and (max-width: 749px) {
    .faq-tabs__tab-list {
      overflow-x: auto;
      white-space: nowrap;
      justify-content: flex-start;
      margin-bottom: 3rem;
      border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    }
    .faq-tabs__tab-button {
      flex-grow: 0;
      flex-shrink: 0;
      border: none;
      border-radius: 0;
      border-bottom: 3px solid transparent;
    }
    .faq-tabs__tab-button[aria-selected="true"] {
      border-color: {{ section.settings.active_tab_background_color }};
      background-color: transparent;
      color: {{ section.settings.active_tab_background_color }};
    }
    .faq-tabs__accordion-group {
      border-radius: 0;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="faq-tabs__header center">
        <h2 class="h1">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    {%- liquid
      assign tab_blocks = section.blocks | where: 'type', 'tab_title'
      assign faq_blocks = section.blocks | where: 'type', 'faq_item'
    -%}

    <tab-component id="FaqTabs-{{ section.id }}">
      <div class="faq-tabs__tab-list" role="tablist">
        {%- for block in tab_blocks -%}
          <button
            class="faq-tabs__tab-button h6"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="TabPanel-{{ forloop.index }}-{{ section.id }}"
            id="Tab-{{ forloop.index }}-{{ section.id }}"
            tabindex="{% if forloop.first %}0{% else %}-1{% endif %}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.title | default: 'Tab' }}
          </button>
        {%- endfor -%}
      </div>

      <div class="faq-tabs__tab-panels">
        {%- for block in tab_blocks -%}
          <div
            class="faq-tabs__tab-panel{% if forloop.first %} is-active{% endif %}"
            id="TabPanel-{{ forloop.index }}-{{ section.id }}"
            role="tabpanel"
            aria-labelledby="Tab-{{ forloop.index }}-{{ section.id }}"
            tabindex="0"
          >
            <div class="faq-tabs__accordion-group">
              {%- for faq_item in faq_blocks -%}
                {%- if faq_item.settings.tab_parent == block.settings.title -%}
                  <details class="accordion__item" {{ faq_item.shopify_attributes }}>
                    <summary class="accordion__title h4">
                      <span>{{ faq_item.settings.question | default: 'Question' }}</span>
                      {% render 'icon-caret' %}
                    </summary>
                    <div class="accordion__content rte">
                      {{ faq_item.settings.answer }}
                    </div>
                  </details>
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </tab-component>
  </div>
</div>

<script>
  if (!customElements.get('tab-component')) {
    customElements.define('tab-component', class TabComponent extends HTMLElement {
      constructor() {
        super();
        this.tabs = this.querySelectorAll('[role="tab"]');
        this.panels = this.querySelectorAll('[role="tabpanel"]');
        this.tabs.forEach(tab => tab.addEventListener('click', this.onTabClick.bind(this)));
      }

      onTabClick(event) {
        event.preventDefault();
        const clickedTab = event.currentTarget;
        const targetPanelId = clickedTab.getAttribute('aria-controls');

        this.tabs.forEach(tab => {
          const isSelected = tab === clickedTab;
          tab.setAttribute('aria-selected', isSelected);
          tab.setAttribute('tabindex', isSelected ? '0' : '-1');
        });

        this.panels.forEach(panel => {
          const isActive = panel.id === targetPanelId;
          panel.classList.toggle('is-active', isActive);
        });
        
        clickedTab.focus();
      }
    });
  }
</script>

{% schema %}
{
  "name": "FAQ with tabs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "header",
      "content": "Tab Colors"
    },
    {
      "type": "color",
      "id": "active_tab_background_color",
      "label": "Active tab background / Mobile highlight",
      "default": "#FF0000"
    },
    {
      "type": "color",
      "id": "active_tab_text_color",
      "label": "Active tab text",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "inactive_tab_text_color",
      "label": "Inactive tab text",
      "default": "#777777"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "tab_title",
      "name": "Tab Title",
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab title",
          "default": "Tab Title"
        }
      ]
    },
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "tab_parent",
          "label": "Parent tab",
          "info": "Type the *exact* name of the tab this FAQ belongs to."
        },
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What are the major sights featured?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Use this text to answer the question.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ with tabs",
      "blocks": [
        { "type": "tab_title", "settings": { "title": "About the Itinerary" }},
        { "type": "tab_title", "settings": { "title": "General" }},
        { "type": "faq_item", "settings": { "tab_parent": "About the Itinerary" }},
        { "type": "faq_item", "settings": { "tab_parent": "General" }}
      ]
    }
  ]
}
{% endschema %}
